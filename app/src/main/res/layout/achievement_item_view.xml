<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/keyline_2"
    android:background="?selectableItemBackground">


    <com.cavemen.cavehealth.ui.widget.BezelImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/keyline_2"
        android:layout_height="@dimen/keyline_2"
        android:padding="@dimen/keyline_1"
        android:scaleType="fitXY"
        app:maskDrawable="@drawable/circle_mask" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/keyline_2"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="@dimen/keyline_2"
        android:paddingRight="@dimen/keyline_1">

        <TextView
            android:id="@+id/title"
            style="@style/ListItem.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/description"
            style="@style/ListItem.Subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</FrameLayout>